<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dhcc.itims.cri.shzdt">
    <resultMap type="com.dhcc.itims.cri.shzdt.dao.ProtypeData" id="ProtypeDataMap">
        <result column="id" property="id"/>
        <result column="parameterCode" property="parameterCode"/>
        <result column="parameterName" property="parameterName"/>
        <result column="value" property="value"/>
        <result column="unit" property="unit"/>
        <result column="state" property="state"/>
        <result column="alarmTop" property="alarmTop"/>
        <result column="alarmBottom" property="alarmBottom"/>
        <result column="alertTop" property="alertTop"/>
        <result column="alertBottom" property="alertBottom"/>
        <result column="collectTime" property="collectTime"/>
    </resultMap>
    <select id="selectAllData" resultMap="ProtypeDataMap">
        SELECT id,
		   parameterCode,
		   parameterName,
		   value,
		   unit,
		   state,
		   alarmTop,
		   alarmBottom,
		   alertTop,
		   alertBottom,
		   collectTime
        FROM shzdt_data
    </select>

    <!-- 保存paramterValue对象-->
    <update id="saveParmeterValue" parameterType="com.dhcc.itims.cri.shzdt.extapi.po.ParameterValue">
        <![CDATA[
	   		UPDATE shzdt_parameter_value
	   		SET pastate=#{state},padate = #{date},pavalue=#{value}
	   		WHERE  paid = #{paid}

	   		IF @@ROWCOUNT = 0

	   		INSERT INTO shzdt_parameter_value (
				pastate ,padate ,pavalue,paid
			)
			VALUES(
				#{state}, #{date}, #{value},#{paid}
			)
		]]>
    </update>

    <resultMap type="com.dhcc.itims.cri.shzdt.extapi.po.ParameterValue" id="ParameterValueMap">
        <result column="id" property="id"/>
        <result column="pastate" property="state"/>
        <result column="padate" property="date"/>
        <result column="pavalue" property="value"/>
        <result column="paid" property="paid"/>
    </resultMap>
    <select id="selectAllParameterValue" resultMap="ProtypeDataMap">
        SELECT id, pastate ,padate ,pavalue,paid
        FROM shzdt_parameter_value
    </select>
</mapper>