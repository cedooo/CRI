		<trigger>
			<cron>
				<name>zdt_trigger_1</name>
				<group>ZDT_TRI</group>
				<job-name>zdt_collector_1</job-name>
				<job-group>zdt_jobs</job-group>
				<priority>5</priority>
				<cron-expression>0 0/5 * * * ?</cron-expression>
